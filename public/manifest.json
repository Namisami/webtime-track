{
  "manifest_version": 3,
  "name": "WebTime Scrobbler",
  "version": "1.0.0",
  "description": "description",
  "action": {
    "default_icon": {              
      "16": "images/icon16.png",   
      "24": "images/icon24.png",   
      "32": "images/icon32.png"    
    },
    "default_title": "Open WebTime Tracker"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "idle"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/script.ts"],
      "matches": ["<all_urls>"]
    }
  ]
}