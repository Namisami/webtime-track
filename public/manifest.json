{
  "manifest_version": 3,
  "name": "WebTime Scrobbler",
  "version": "1.0.0",
  "description": "description",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "idle"
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "js": ["src/script.ts"],
      "matches": ["<all_urls>"]
    }
  ]
}